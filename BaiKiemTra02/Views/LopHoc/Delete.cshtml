@model BaiKiemTra02.Models.LopHoc

@{
    ViewData["Title"] = "Xóa Lớp Học";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Lớp Học</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenLopHoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenLopHoc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NamNhapHoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NamNhapHoc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NamRaTruong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NamRaTruong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoLuongSinhVien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuongSinhVien)
        </dd>
    </dl>

    <h4>Bạn có chắc chắn muốn xóa lớp học này?</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>